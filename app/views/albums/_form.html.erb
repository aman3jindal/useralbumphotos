<%= form_with model: [current_user, @album] do |form|%>
  <div class="form-group">
    <%= form.label :name%><br>
    <%= form.text_field :name, class: "form-control", placeholder: "Name"%>
    <% @album.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <%end%>
  </div>
  <div class="form-group">
    <%= form.label :description%><br>
    <%= form.text_field :description, class: "form-control", placeholder: "Description"%>
    <% @album.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <%end%>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-success'%>
  </div>
<%end%>